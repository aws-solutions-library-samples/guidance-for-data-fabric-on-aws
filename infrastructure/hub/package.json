{
	"name": "@df/infrastructure-hub",
	"version": "1.0.0",
	"description": "DF: Hub Infrastructure.",
	"author": "Pouya Bahavar <bahavar@amazon.com>",
	"type": "module",
	"scripts": {
		"clean:package": "npx shx rm -rf dist *.log .rush tsconfig.tsbuildinfo",
		"build": "npx tsc -b && npm run build:validator",
		"build:validator": "node_modules/.bin/ts-node --esm --prefer-ts-exts esbuild.ts",
		"test": "npm run build && vitest run --passWithNoTests",
		"predeploy": "node_modules/.bin/ts-node --esm --prefer-ts-exts src/predeploy.ts",
		"cdk": "npm run predeploy && cdk"
	},
	"dependencies": {
		"aws-cdk-lib": "2.135.0",
		"constructs": "10.2.69",
		"@aws-sdk/client-iam": "3.496.0",
		"@aws-sdk/client-sso-admin": "3.496.0",
		"@aws-sdk/client-datazone": "3.515.0",
		"@aws-sdk/client-identitystore": "3.502.0",
		"@aws-sdk/client-cognito-identity-provider": "3.496.0",
		"@aws-sdk/client-cognito-identity": "3.496.0",
		"@aws-sdk/client-ssm": "3.496.0",
		"@aws-sdk/client-mwaa": "3.496.0",
		"source-map-support": "0.5.21",
		"awilix": "8.0.1",
		"pino": "8.14.1",
		"pino-pretty": "10.0.1",
		"cdk-nag": "2.27.73",
		"@df/cdk-common": "workspace:*",
		"@df/events": "workspace:*",
		"shelljs": "0.8.5",
		"ajv": "8.12.0"
	},
	"devDependencies": {
		"@esbuild-plugins/node-globals-polyfill": "0.2.3",
		"@esbuild-plugins/node-modules-polyfill": "0.2.2",
		"@tsconfig/node16-strictest-esm": "1.0.3",
		"@types/node": "20.4.2",
		"@types/prettier": "2.7.3",
		"@typescript-eslint/eslint-plugin": "6.1.0",
		"@typescript-eslint/parser": "6.1.0",
		"aws-cdk": "2.135.0",
		"esbuild": "0.18.14",
		"eslint": "8.45.0",
		"pnpm": "8.6.8",
		"shx": "0.3.4",
		"ts-node": "10.9.1",
		"typescript": "5.1.6",
		"vitest": "1.4.0",
		"vitest-mock-extended": "1.3.1"
	},
	"private": false
}
